@using WouterFennis.ChatApp.FrontEnd.ViewModels
@model ChatRoomViewModel
@{
    ViewData["Title"] = Model.Name;
}

<h1>@Model.Name</h1>
<div class="container">
    @{
        foreach (MessageViewModel message in Model.Messages)
        {
            <div class="row">
                <div class="col-md-3">
                    <h3>@message.Sender</h3>
                </div>
                <div class="col-md-9">
                    <h3>@message.Content</h3>
                </div>
            </div>
        }
    }
</div>


